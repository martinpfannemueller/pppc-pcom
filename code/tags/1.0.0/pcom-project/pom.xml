				<type>jar</type>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<!-- Com port access for presenter IR components. -->
				<groupId>gnu.io</groupId>
				<artifactId>gnu-rxtx</artifactId>
				<version>2.1.7</version>
				<type>jar</type>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<!-- Java COM bridge for presenter components. -->
				<groupId>com.jacob</groupId>
				<artifactId>jacob-project</artifactId>
				<version>1.15.M4</version>
				<type>jar</type>
				<scope>provided</scope>
			</dependency>
			<dependency>
